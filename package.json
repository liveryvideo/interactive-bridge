{
  "name": "@liveryvideo/interactive-bridge",
  "version": "1.14.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Livery Video Interactive Bridge.",
  "author": "Livery Video",
  "homepage": "https://www.liveryvideo.com/",
  "license": "MIT",
  "repository": "github:liveryvideo/interactive-bridge",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.umd.js"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "build:lib:doc": "typedoc && mv dist/doc/* dist/ && rm -rf dist/doc",
    "build:lib": "vite build -m lib:bundler && vite build -m lib:browser --emptyOutDir false && npm run build:lib:doc",
    "build": "vite build",
    "dev": "vite",
    "lint": "biome check && eslint && tsc",
    "lint:fix": "biome check --fix && eslint --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build:lib",
    "preview": "vite preview",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "lit": "^3.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@liveryvideo/biome-lit": "^1.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "browserslist-to-esbuild": "^2.1.1",
    "eslint": "^9.12.0",
    "git-branch-is": "^4.0.0",
    "happy-dom": "^15.7.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "semantic-release": "^24.1.2",
    "typedoc": "0.25.13",
    "typedoc-plugin-markdown": "4.0.1",
    "typedoc-plugin-no-inherit": "1.4.0",
    "typescript": "5.4.5",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.2.4",
    "vitest": "^2.1.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "biome check --fix --no-errors-on-unmatched",
      "eslint --fix"
    ]
  }
}
