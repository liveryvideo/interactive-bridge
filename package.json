{
  "name": "@liveryvideo/interactive-bridge",
  "version": "1.12.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Livery Video Interactive Bridge.",
  "author": "Livery Video",
  "homepage": "https://www.liveryvideo.com/",
  "license": "MIT",
  "repository": "github:liveryvideo/interactive-bridge",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.umd.js"
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "build:lib": "vite build -m lib:bundler && vite build -m lib:browser --emptyOutDir false",
    "build": "vite build",
    "dev": "vite",
    "format:eslint": "eslint --ext .ts,.js,.html . --fix",
    "format:markdown": "markdownlint \"**/*.md\" --fix",
    "format:prettier": "prettier \"**/*.{html,js,json,md,ts}\" --write",
    "format": "npm run format:eslint && npm run format:markdown && npm run format:prettier",
    "lint:eslint": "eslint --ext .ts,.js,.html .",
    "lint:markdown": "markdownlint \"**/*.md\"",
    "lint:prettier": "prettier \"**/*.{html,js,json,md,ts}\" --check",
    "lint:typescript": "tsc",
    "lint": "npm run lint:typescript && npm run lint:eslint && npm run lint:markdown && npm run lint:prettier",
    "prepare": "husky install",
    "prepublishOnly": "npm run build:lib",
    "preview": "vite preview",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "lit": "^3.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@open-wc/eslint-config": "^12.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "browserslist-to-esbuild": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "git-branch-is": "^4.0.0",
    "happy-dom": "^13.3.8",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "semantic-release": "^23.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ]
  }
}
