{
  "name": "@liveryvideo/interactive-bridge",
  "version": "1.6.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Livery Video Interactive Bridge.",
  "author": "Livery Video",
  "homepage": "https://www.liveryvideo.com/",
  "license": "MIT",
  "repository": "github:liveryvideo/interactive-bridge",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.umd.js"
  },
  "types": "build/index.d.ts",
  "files": [
    "build/**/*.d.ts",
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "build:ext": "mkdir -p build",
    "build": "npm run build:ext && tsc -d",
    "clean": "rimraf build dist coverage",
    "cz": "git-cz",
    "dist:demo": "rollup -m -c rollup.config.demo.js",
    "dist:watch": "rollup -c -w",
    "dist": "rollup -m -c",
    "format:eslint": "eslint --ext .ts,.js,.html . --fix",
    "format:markdown": "markdownlint \"**/*.md\" --fix",
    "format:prettier": "prettier \"**/*.{html,js,json,md,ts}\" --write",
    "format": "npm run format:eslint && npm run format:markdown && npm run format:prettier",
    "lint:eslint": "eslint --ext .ts,.js,.html .",
    "lint:markdown": "markdownlint \"**/*.md\"",
    "lint:prettier": "prettier \"**/*.{html,js,json,md,ts}\" --check",
    "lint": "npm run lint:eslint && npm run lint:markdown && npm run lint:prettier",
    "prepare": "husky install",
    "prepublishOnly": "npm run dist",
    "start:compatibility": "web-dev-server --esbuild-target auto --node-resolve --open demo/ --watch",
    "start": "web-dev-server --node-resolve --open demo/ --watch",
    "test:watch": "web-test-runner --watch",
    "test": "web-test-runner",
    "watch": "npm run build:ext && tsc -d -w"
  },
  "dependencies": {
    "lit": "^2.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/test-runner": "^0.13.22",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "git-branch-is": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "markdownlint-cli": "^0.30.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^18.0.1",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ]
  }
}
